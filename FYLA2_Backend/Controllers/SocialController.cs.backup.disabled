        // Follow endpoints
        [HttpPost("follow/{providerId}")]
        public async Task<ActionResult<FollowResponse>> FollowProvider(string providerId)
        {
            try
            {
                var userId = GetUserId();
                if (string.IsNullOrEmpty(userId))
                {
                    return Unauthorized(new FollowResponse { Success = false, Message = "User not authenticated" });
                }

                if (userId == providerId)
                {
                    return BadRequest(new FollowResponse { Success = false, Message = "Cannot follow yourself" });
                }

                // Check if already following
                var existingFollow = await _context.UserFollows
                    .FirstOrDefaultAsync(f => f.FollowerId == userId && f.FollowingId == providerId);

                if (existingFollow != null)
                {
                    return BadRequest(new FollowResponse { Success = false, Message = "Already following this provider" });
                }

                // Create new follow relationship
                var userFollow = new UserFollow
                {
                    FollowerId = userId,
                    FollowingId = providerId,
                    CreatedAt = DateTime.UtcNow
                };

                _context.UserFollows.Add(userFollow);
                await _context.SaveChangesAsync();

                // Get updated follower count
                var followerCount = await _context.UserFollows
                    .CountAsync(f => f.FollowingId == providerId);

                return Ok(new FollowResponse
                {
                    Success = true,
                    IsFollowing = true,
                    FollowerCount = followerCount,
                    Message = "Successfully followed provider"
                });
            }
            catch (Exception ex)
            {
                _logger.LogError(ex, "Error following provider");
                return StatusCode(500, new FollowResponse { Success = false, Message = "Internal server error" });
            }
        }

        [HttpDelete("follow/{providerId}")]
        public async Task<ActionResult<FollowResponse>> UnfollowProvider(string providerId)
        {
            try
            {
                var userId = GetUserId();
                if (string.IsNullOrEmpty(userId))
                {
                    return Unauthorized(new FollowResponse { Success = false, Message = "User not authenticated" });
                }

                // Find and remove follow relationship
                var existingFollow = await _context.UserFollows
                    .FirstOrDefaultAsync(f => f.FollowerId == userId && f.FollowingId == providerId);

                if (existingFollow == null)
                {
                    return BadRequest(new FollowResponse { Success = false, Message = "Not following this provider" });
                }

                _context.UserFollows.Remove(existingFollow);
                await _context.SaveChangesAsync();

                // Get updated follower count
                var followerCount = await _context.UserFollows
                    .CountAsync(f => f.FollowingId == providerId);

                return Ok(new FollowResponse
                {
                    Success = true,
                    IsFollowing = false,
                    FollowerCount = followerCount,
                    Message = "Successfully unfollowed provider"
                });
            }
            catch (Exception ex)
            {
                _logger.LogError(ex, "Error unfollowing provider");
                return StatusCode(500, new FollowResponse { Success = false, Message = "Internal server error" });
            }
        }

        [HttpGet("follow/{providerId}/status")]
        public async Task<ActionResult<FollowResponse>> GetFollowStatus(string providerId)
        {
            try
            {
                var userId = GetUserId();
                if (string.IsNullOrEmpty(userId))
                {
                    return Unauthorized(new FollowResponse { Success = false, Message = "User not authenticated" });
                }

                // Check if user is following this provider
                var isFollowing = await _context.UserFollows
                    .AnyAsync(f => f.FollowerId == userId && f.FollowingId == providerId);

                // Get follower count
                var followerCount = await _context.UserFollows
                    .CountAsync(f => f.FollowingId == providerId);

                return Ok(new FollowResponse
                {
                    Success = true,
                    IsFollowing = isFollowing,
                    FollowerCount = followerCount,
                    Message = "Follow status retrieved successfully"
                });
            }
            catch (Exception ex)
            {
                _logger.LogError(ex, "Error getting follow status");
                return StatusCode(500, new FollowResponse { Success = false, Message = "Internal server error" });
            }
        }
