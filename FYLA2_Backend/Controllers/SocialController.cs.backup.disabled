                _logger.LogError(ex, "Error getting post {PostId}", id);
                return StatusCode(500, "Internal server error");
            }
        }

        // GET: api/social/feed - Real implementation
        [HttpGet("feed")]
        public async Task<ActionResult<FeedDto>> GetSocialFeed(
            [FromQuery] int page = 1,
            [FromQuery] int pageSize = 20,
            [FromQuery] string filter = "all")
        {
            try
            {
                var userId = GetUserId();
                if (string.IsNullOrEmpty(userId))
                    return Unauthorized();

                _logger.LogInformation($"Getting social feed for user {userId}, page {page}, pageSize {pageSize}, filter {filter}");

                var skip = (page - 1) * pageSize;

                // Get posts from providers (business posts)
                var query = _context.Posts
                    .Include(p => p.User)
                    .Include(p => p.Likes)
                    .Include(p => p.Comments)
                    .Include(p => p.Bookmarks)
                    .Where(p => p.IsBusinessPost) // Focus on business posts for now
                    .OrderByDescending(p => p.CreatedAt)
                    .Skip(skip)
                    .Take(pageSize);

                var posts = await query.ToListAsync();
                var totalCount = await _context.Posts.CountAsync(p => p.IsBusinessPost);

                var postDtos = new List<PostDto>();
                foreach (var post in posts)
                {
                    var postDto = await GetPostDto(post.Id, userId);
                    if (postDto != null)
                        postDtos.Add(postDto);
                }

                var feedDto = new FeedDto
                {
                    Posts = postDtos,
                    TotalCount = totalCount,
                    HasMore = skip + pageSize < totalCount
                };

                return Ok(feedDto);
            }
            catch (Exception ex)
            {
                _logger.LogError(ex, "Error getting social feed");
                return StatusCode(500, new { error = "Internal server error", details = ex.Message });
            }
        }

