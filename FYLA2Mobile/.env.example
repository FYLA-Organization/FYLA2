# FYLA2 Mobile Environment Configuration
# Copy this file to .env and update the values as needed

# API Configuration
# Option 1: Set this to your computer's current IP address
# EXPO_PUBLIC_API_URL=http://10.21.126.59:5224/api

# Option 2: Leave empty to use auto-detection (recommended for development)
EXPO_PUBLIC_API_URL=

# Production settings (if different)
EXPO_PUBLIC_API_URL_PROD=https://your-production-domain.com/api

# Development settings
EXPO_PUBLIC_ENABLE_DEBUG=true
EXPO_PUBLIC_API_TIMEOUT=15000
